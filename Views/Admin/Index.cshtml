
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Admin/Shared/_AdminLayout.cshtml";
}
@model List<AracKiralama.Models.Arac>

<div class="table-responsive">
    <table class="table table-hover table-condensed" style="cursor:default">
        <thead>
            <tr>
                <th>Marka</th>
                <th>Model</th>
                <th>Resim</th>
                <th>Plaka</th>
                <th>Vites</th>
                <th>Fiyat</th>
                <th>Durum</th>
                <th>İşlem</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Marka</td>
                    <td>@item.Model</td>
                    <td><img src="@item.imagePath" width="50" height="50" /></td>
                    <td>@item.Plaka</td>
                    <td>@item.Vites</td>
                    <td>@item.Fiyat</td>
                    <td>@if (item.Durum==true)
                    {
                        <a class="btn btn-success dBtn" style="width:60px" id="@item.Id" data-id="@item.Id">@item.Durum</a>
                    }
                    else
                    {
                        <a class="btn btn-danger dBtn" style="width:60px" id="@item.Id" data-id="@item.Id">@item.Durum</a>
                    }

                    </td>
                    <td>
                        <a href="~/Admin/Edit/@item.Id" class="glyphicon glyphicon-edit"></a>
                        <a href="~/Admin/Remove/@item.Id" class="glyphicon glyphicon-remove"></a>
                    </td>
                </tr>
            }
                      
        </tbody>
    </table>
</div>




